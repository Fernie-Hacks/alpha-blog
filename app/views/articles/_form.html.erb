<!--
Renders the _errors partial which is in the ../shared folder
Pass the definition of obj to the embedded ruby line of code. 
-->
<%= render 'shared/errors', obj: @article %>

<!--
Do not include form-horizontal here opposite to bootstrap example.
http://getbootstrap.com/css/#forms
Otherwise it creates two authenticity tokens blocking user from submitting form
-->
<div class='row'>
  <div class='col-xs-12'>
    <!-- Instead added form-horizontal class in embedded ruby form_for. -->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article Body", autofocus:true %>
      </div>
    </div>
    <div class="form-group">
      <div  class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Return to articles listing", articles_path %> ]
    </div>
  </div>
</div>
